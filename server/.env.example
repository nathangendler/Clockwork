# ================================
# Flask Configuration
# ================================

# Secret key for session cookies (make this a long random string)
FLASK_SECRET_KEY=your-secret-key-change-in-prod


# ================================
# PostgreSQL Database
# ================================

# Your PostgreSQL username (often your Mac username, or 'postgres')
POSTGRES_USER=postgres

# Your PostgreSQL password (leave empty if you haven't set one)
POSTGRES_PASSWORD=

# Host where PostgreSQL is running
POSTGRES_HOST=localhost

# PostgreSQL port (default is 5432)
POSTGRES_PORT=5432

# Database name (we'll create this)
POSTGRES_DB=clockwork
